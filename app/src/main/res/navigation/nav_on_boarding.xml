<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_on_boarding"
    app:startDestination="@id/onBoarding1Fragment">

    <fragment
        android:id="@+id/onBoarding1Fragment"
        android:name="com.example.exercise3.ui.onboarding.fragments.OnBoarding1Fragment"
        android:label="fragment_on_boarding_1"
        tools:layout="@layout/fragment_on_boarding_1" >
        <action
            android:id="@+id/action_onBoarding1Fragment_to_onBoarding2Fragment"
            app:destination="@id/onBoarding2Fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/onBoarding2Fragment"
        android:name="com.example.exercise3.ui.onboarding.fragments.OnBoarding2Fragment"
        android:label="fragment_on_boarding_2"
        tools:layout="@layout/fragment_on_boarding_2" >
        <action
            android:id="@+id/action_onBoarding2Fragment_to_onBoarding3Fragment"
            app:destination="@id/onBoarding3Fragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"/>
    </fragment>
    <fragment
        android:id="@+id/onBoarding3Fragment"
        android:name="com.example.exercise3.ui.onboarding.fragments.OnBoarding3Fragment"
        android:label="fragment_on_boarding_3"
        tools:layout="@layout/fragment_on_boarding_3" />
</navigation>